// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
    friendCode String  @unique @default(cuid()) @map("friend_code")
    displayName String? @map("display_name")
    isProfilePublic Boolean @default(false) @map("is_profile_public")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  characters CharacterTraining[]
    sentFriendRequests Friendship[] @relation("SentRequests")
    receivedFriendRequests Friendship[] @relation("ReceivedRequests")
    profileSettings ProfileSettings?

  @@map("users")
}

  enum FriendshipStatus {
    PENDING
    ACCEPTED
    BLOCKED
  }

  model Friendship {
    id         String           @id @default(uuid())
    userId     String           @map("user_id")
    friendId   String           @map("friend_id")
    status     FriendshipStatus @default(PENDING)
    createdAt  DateTime         @default(now()) @map("created_at")
    acceptedAt DateTime?        @map("accepted_at")

    user   User @relation("SentRequests", fields: [userId], references: [id], onDelete: Cascade)
    friend User @relation("ReceivedRequests", fields: [friendId], references: [id], onDelete: Cascade)

    @@unique([userId, friendId])
    @@map("friendships")
  }

  model ProfileSettings {
    id                 String   @id @default(uuid())
    userId             String   @unique @map("user_id")
    showStats          Boolean  @default(true) @map("show_stats")
    showCharacters     Boolean  @default(true) @map("show_characters")
    showBestRuns       Boolean  @default(true) @map("show_best_runs")
    showRecentActivity Boolean  @default(true) @map("show_recent_activity")
    createdAt          DateTime @default(now()) @map("created_at")
    updatedAt          DateTime @updatedAt @map("updated_at")

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("profile_settings")
  }

model CharacterTraining {
  id                 String   @id @default(uuid())
  userId             String   @map("user_id")
  characterName      String   @map("character_name")
  identifierVersion  String   @map("identifier_version")
  notes              String?
  isArchived         Boolean  @default(false) @map("is_archived")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  // Stats
  speed              Int?     @default(0)
  stamina            Int?     @default(0)
  power              Int?     @default(0)
  guts               Int?     @default(0)
  wit                Int?     @default(0)
  rank               String?  // e.g. "A+", "SS"

  // Skills
  uniqueSkillLevel   Int?     @map("unique_skill_level") // 1-6
  skills             Json?    // Array of {name: string, isRare: boolean}

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  runs Run[]

  @@map("character_trainings")
}

model Skill {
  id        String   @id @default(uuid())
  name      String   @unique
  isRare    Boolean  @default(false) @map("is_rare")
  timesUsed Int      @default(0) @map("times_used")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("skills")
}

enum TrackType {
  TURF_SHORT     // Césped Corto
  TURF_MILE      // Césped Milla
  TURF_MEDIUM    // Césped Medio
  TURF_LONG      // Césped Largo
  DIRT           // Tierra
}

model Run {
  id                     String    @id @default(uuid())
  characterTrainingId    String    @map("character_training_id")
  trackType              TrackType @map("track_type")
  finalPlace             Int       @map("final_place")
  rareSkillsCount        Int       @default(0) @map("rare_skills_count")
  normalSkillsCount      Int       @default(0) @map("normal_skills_count")
  uniqueSkillActivated   Boolean   @default(false) @map("unique_skill_activated")
  goodPositioning        Boolean   @default(false) @map("good_positioning")
  rushed                 Boolean   @default(false)
  score                  Int
  date                   DateTime  @default(now())
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime  @updatedAt @map("updated_at")

  characterTraining CharacterTraining @relation(fields: [characterTrainingId], references: [id], onDelete: Cascade)

  @@map("runs")
}
